<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - OriGames.Facts.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <base href="~/"/>
    <link rel="stylesheet" href="~/OriGames.Facts.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
    <link rel="Shortcut Icon" href="~/favicon.ico" />
        @await RenderSectionAsync("Headers", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Facts" asp-action="Index">OriGames Факты</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Facts" asp-action="RandomFact" title="случайно выбранный факт">Случайный факт</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Site" asp-action="Cloud" title="облако тегов">Облако меток</a>
                                    </li>
            
                                    <partial name="_LoginPartial" />
                                </ul>
                            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="row text-muted">
            <ul class="nav nav-pills nav-fill">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Site" asp-action="About">О проекте</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Site" asp-action="Feedback">Обратная связь</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Site" asp-action="Rss">RSS-канал фактов</a>
                </li>
            </ul>

            <p class="small text-center">
                &copy; 2023 - OriGames
            </p>
        </footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>